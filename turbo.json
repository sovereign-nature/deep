{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["GQL_HOST", "NITRO_PRESET"],
      "outputs": [
        "artifacts/**",
        "cache/**",
        "typechain-types/**",
        "pages/.vitepress/dist/**",
        ".nuxt/**",
        ".vercel/**",
        "build/**",
        "generated/**"
      ]
    },
    "lint": {
      "env": ["PRIVATE_KEY", "OWNER_ADDRESS", "LATEST_ADDRESS"],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "codegen": {
      "outputs": ["generated/**"]
    }
  },
  "globalDependencies": [".env"]
}
