{
  "name": "@sni/contracts",
  "version": "0.0.0",
  "prettier": "@sni/prettier-config",
  "scripts": {
    "compile": "hardhat compile",
    "build": "npm run compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts",
    "deploy:moonbase": "hardhat run --network moonbase scripts/deploy.ts",
    "mint:moonbase": "hardhat run --network moonbase scripts/mint.ts",
    "coverage": "hardhat coverage",
    "lint:contracts": "solhint contracts/**/*.sol",
    "lint:tests": "eslint **/*.ts",
    "lint": "npm run lint:contracts && npm run lint:tests"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@openzeppelin/contracts": "4.9.3",
    "@sni/constants": "*",
    "@sni/prettier-config": "*",
    "@web-std/fetch": "4.1.2",
    "axios": "1.4.0",
    "dotenv": "16.3.1",
    "eslint-config-sni": "*",
    "hardhat": "2.17.1",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-gas-reporter": "1.0.9",
    "nft.storage": "7.1.1",
    "solhint": "3.5.1",
    "solidity-coverage": "0.8.4"
  }
}
