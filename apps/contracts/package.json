    "@web-std/fetch": "4.2.1",
    "axios": "1.6.2",
    "dotenv": "16.3.1",
    "hardhat": "2.19.2",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-gas-reporter": "1.0.9",
    "nft.storage": "7.1.1",
    "solhint": "3.6.2",
    "solidity-coverage": "0.8.5"
