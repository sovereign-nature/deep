/* Addapted from videojs/forest theme */
/* Because of the SVG inliner, these don't work for icons */
.vjs-theme-sni {
  --vjs-theme-sni--primary: #00C67E;
  --vjs-theme-sni--secondary: #08FFA6;
}

/* Big play Button */
.vjs-theme-sni:hover .vjs-big-play-button,
.vjs-theme-sni.vjs-big-play-button:focus {
  background-color: transparent;
  background: svg-load('icons/play-btn.svg', fill=#08FFA6);
}




.vjs-theme-sni .vjs-big-play-button {
  width: 66px;
  height: 66px;
  background: none;
  background-repeat: no-repeat;
  background-position: center;
  background: svg-load('icons/play-btn.svg', fill=#00C67E);
  border: none;
  top: 50%;
  left: 50%;
  margin-top: -33px;
  margin-left: -33px;
  color: #00C67E;
}

.vjs-theme-sni .vjs-big-play-button .vjs-icon-placeholder {
  display: none;
}

/* Control Bar */
.vjs-theme-sni .vjs-button > .vjs-icon-placeholder::before {
  line-height: 1.55;
}

.vjs-theme-sni .vjs-control:not(.vjs-disabled, .vjs-time-control):hover {
  color: var(--vjs-theme-sni--primary);
  //text-shadow: var(--vjs-theme-sni--secondary) 1px 0 10px;
}

.vjs-theme-sni .vjs-control-bar {
  background: none;
  margin-bottom: 1em;
  padding-left: 1em;
  padding-right: 1em;
}

/* Play Button */
.vjs-theme-sni .vjs-play-control {
  font-size: 0.8em;
}

.vjs-theme-sni .vjs-play-control .vjs-icon-placeholder:before {
  background-color: var(--vjs-theme-sni--primary);
  height: 1.5em;
  width: 1.5em;
  margin-top: 0.2em;
  border-radius: 1em;
  color: #002727;
}

.vjs-theme-sni .vjs-play-control:hover .vjs-icon-placeholder:before {
  background-color: var(--vjs-theme-sni--secondary);
  color: #002727
}

/* Volume stuff */
.vjs-theme-sni .vjs-mute-control {
  display: none;
}

.vjs-theme-sni .vjs-volume-panel {
  margin-left: 0.5em;
  margin-right: 0.5em;
  padding-top: 0.3em;
}

.vjs-theme-sni .vjs-volume-panel,
.vjs-theme-sni .vjs-volume-panel:hover,
.vjs-theme-sni .vjs-volume-panel:hover .vjs-volume-control.vjs-volume-horizontal,
.vjs-theme-sni .vjs-volume-panel:active .vjs-volume-control.vjs-volume-horizontal,
.vjs-theme-sni .vjs-volume-panel.vjs-volume-panel-horizontal:hover,
.vjs-theme-sni .vjs-volume-panel.vjs-volume-panel-horizontal.vjs-slider-active,
.vjs-theme-sni .vjs-volume-bar.vjs-slider-horizontal {
  width: 3em;
}

.vjs-theme-sni .vjs-volume-level::before {
  font-size: 1em;
}

.vjs-theme-sni .vjs-volume-panel .vjs-volume-control {
  opacity: 1;
  width: 100%;
  height: 100%;
}

.vjs-theme-sni .vjs-volume-bar {
  background-color: transparent;
  margin: 0;
}

.vjs-theme-sni .vjs-slider-horizontal .vjs-volume-level {
  height: 100%;
}

.vjs-theme-sni .vjs-volume-bar.vjs-slider-horizontal {
  margin-top: 0;
  margin-bottom: 0;
  height: 100%;
}

.vjs-theme-sni .vjs-volume-bar::before {
  content: '';
  z-index: 0;
  width: 0;
  height: 0;
  position: absolute;
  top: 0px;
  left: 0;

  border-style: solid;
  border-width: 0 0 2em 3em;
  border-color: transparent transparent var(--vjs-theme-sni--secondary) transparent;
}

.vjs-theme-sni .vjs-volume-level {
  overflow: hidden;
  background-color: transparent;
}

.vjs-theme-sni .vjs-volume-level::before {
  content: '';
  z-index: 1;
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  left: 0;

  border-style: solid;
  border-width: 0 0 2em 3em;
  border-color: transparent transparent var(--vjs-theme-sni--primary) transparent;
}

/* Progress Bar */
.vjs-theme-sni .vjs-progress-control:hover .vjs-progress-holder {
  font-size: 1em;
}

.vjs-theme-sni .vjs-play-progress::before {
  display: none;
}

.vjs-theme-sni .vjs-progress-holder {
  border-radius: 0.2em;
  height: 0.5em;
  margin: 0;
}

.vjs-theme-sni .vjs-play-progress,
.vjs-theme-sni .vjs-load-progress,
.vjs-theme-sni .vjs-load-progress div {
  border-radius: 0.2em;
}

.vjs-theme-sni .vjs-play-progress  {
  background: var(--vjs-theme-sni--secondary);
}

.vjs-theme-sni .vjs-load-progress div {
  background: #002727;
}



