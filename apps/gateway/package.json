{
  "name": "@sni/gateway",
  "version": "0.0.0",
  "description": "GraphQL API Gateway",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "codegen": "mustache config/production.js .meshrc.template.yaml > .meshrc.yaml",
    "codegen:staging": "env-cmd mustache config/staging.js .meshrc.template.yaml > .meshrc.yaml",
    "start": "mesh start",
    "dev": "pnpm codegen:staging && wrangler dev",
    "deploy": "pnpm codegen && wrangler publish",
    "deploy:staging": "pnpm codegen:staging && wrangler publish --env staging",
    "build": "pnpm codegen && wrangler publish --dry-run --outdir=dist"
  },
  "dependencies": {
    "@graphql-mesh/cache-cfw-kv": "0.96.4",
    "@graphql-mesh/cli": "0.88.6",
    "@graphql-mesh/graphql": "0.96.4",
    "@graphql-mesh/json-schema": "0.98.0",
    "@graphql-mesh/plugin-http-cache": "0.96.4",
    "@graphql-mesh/plugin-response-cache": "0.96.6",
    "@graphql-mesh/transform-resolvers-composition": "0.96.4",
    "graphql": "16.8.1"
  },
  "devDependencies": {
    "env-cmd": "10.1.0",
    "mustache": "4.2.0",
    "wrangler": "3.27.0"
  }
}
